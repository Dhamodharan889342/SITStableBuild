        <locationX>454</locationX>
        <locationY>321</locationY>
        <collectionReference>GetVehicleServicePackageItems</collectionReference>
        <iterationOrder>Asc</iterationOrder>
        <nextValueConnector>
            <targetReference>Sum_Quantity_Available</targetReference>
        </nextValueConnector>
        <noMoreValuesConnector>
            <targetReference>Check_Total_Quantity_Available</targetReference>
        </noMoreValuesConnector>
    </loops>
    <processMetadataValues>
